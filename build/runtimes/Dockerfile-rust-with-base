FROM ashupednekar535/litefunctions-runtime-rs:base AS chef

RUN cargo install cargo-chef
WORKDIR /app
COPY . .
RUN cargo chef prepare --recipe-path recipe.json

FROM ashupednekar535/litefunctions-runtime-rs:base AS builder

RUN cargo install cargo-chef
WORKDIR /app
COPY --from=chef /app/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json

ARG GIT_TOKEN
ARG GIT_USER=lwsrepos
ARG PROJECT
ARG NAME

# function.rs is copied into the build context before build

COPY . .

RUN echo "building function: $NAME from project: $PROJECT" && \
    cat pkg/function.rs && \
    cargo build --release

FROM gcr.io/distroless/cc-debian12:nonroot

COPY --from=builder /app/target/release/function /
COPY --from=builder /app/errors.yaml /
WORKDIR /

ARG PROJECT
ARG NAME 
ENV PROJECT=$PROJECT
ENV NAME=$NAME
ENV RUST_LOG=debug,async_nats=info,h2=info,tower_http=info
ENV USE_TELEMETRY=false

USER nonroot

CMD ["/function", "listen"]

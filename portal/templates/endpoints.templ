		<script>
    (function () {
      function isInProgress(run) {
        if (!run) return false;
        const rawStatus = run.status || run.Status;
        if (!rawStatus) return false;
        const status = String(rawStatus).toLowerCase();
        return status === "in_progress" || status === "queued" || status === "waiting" || status === "running";
      }

      function getRuns(progress) {
        if (!progress) return [];
        if (Array.isArray(progress.Runs)) return progress.Runs;
        if (Array.isArray(progress.runs)) return progress.runs;
        return [];
      }

      function pickActiveRun(progress) {
        const runs = getRuns(progress);
        if (!runs.length) return null;
        return runs.find(isInProgress) || null;
      }

      function pickDisplayRun(progress) {
        const runs = getRuns(progress);
        if (!runs.length) return null;
        return runs.find(isInProgress) || runs[0];
      }

      function normalizeName(val) {
        return String(val || "").trim().toLowerCase();
      }

      function getRunName(run) {
        return normalizeName(run?.FunctionName || run?.function_name || run?.WorkflowName || run?.workflow_name || run?.Name || run?.name || "");
      }

      function extractFunctionName(run) {
        const title = String(run?.DisplayTitle || run?.display_title || "").toLowerCase();
        if (!title) return "";
        const m = title.match(/functions\/(?:go|rs|rust|py|python|ts|typescript|lua)\/([^.\s\/]+)\./);
        return m ? m[1] : "";
      }

      function pickRunForFunction(runs, functionName) {
        const target = normalizeName(functionName);
        if (!target) return null;
        const matching = runs.filter(r => {
          const byName = getRunName(r) === target;
          const byDisplay = extractFunctionName(r) === target;
          return byName || byDisplay;
        });
        if (!matching.length) return null;
        return matching;
      }

      function isRunSuccess(run) {
        const { status, conclusion } = normalizeStatus(run);
        if (conclusion === "success" || status === "success") return true;
        if (status === "completed" && !conclusion) return true;
        return false;
      }

      function jobNameForRun(run) {
        return normalizeName(run?.CurrentJob || run?.current_job || run?.Name || run?.name || "");
      }

      function isRelevantRunForLanguage(run, language) {
        const relevant = getRelevantJobs(language);
        if (!relevant.length) return true;
        const job = jobNameForRun(run);
        if (!job) return false;
        return relevant.some(r => job.includes(r));
      }

      function pickRunForFunctionAndLanguage(runs, functionName, language) {
        const matching = pickRunForFunction(runs, functionName);
        if (!matching || !matching.length) return null;

        const activeRelevant = matching.find(r => isInProgress(r) && isRelevantRunForLanguage(r, language));
        if (activeRelevant) return activeRelevant;

        const successRelevant = matching.find(r => isRunSuccess(r) && isRelevantRunForLanguage(r, language));
        if (successRelevant) return successRelevant;

        return matching.find(isInProgress) || matching[0];
      }

      function normalizeStatus(run) {
        if (!run) return "";
        const status = String(run.status || run.Status || "").toLowerCase();
        const conclusion = String(run.conclusion || run.Conclusion || "").toLowerCase();
        return { status, conclusion };
      }

      function statusClass(status, conclusion, running) {
        if (running) {
          return "border-[#6b3f17] bg-[#4a2a0c]/40 text-[#e5b07b] hover:bg-[#4a2a0c]/60";
        }
        if (conclusion === "success" || status === "success") {
          return "border-green-700/60 bg-green-700/15 text-green-300 hover:bg-green-700/30";
        }
        if (["failure", "failed", "cancelled", "canceled", "error", "timed_out"].includes(conclusion) ||
            ["failure", "failed", "cancelled", "canceled", "error", "timed_out"].includes(status)) {
          return "border-red-700/60 bg-red-700/15 text-red-300 hover:bg-red-700/30";
        }
        return "border-neutral-700 bg-neutral-800/50 text-neutral-300 hover:bg-neutral-800";
      }

      function statusLabel(run, running) {
        const name = run?.Name || run?.name || "Build";
        if (running) return `Running: ${name}`;
        const { status, conclusion } = normalizeStatus(run);
        if (conclusion === "success" || status === "success") return `Success: ${name}`;
        if (["failure", "failed", "cancelled", "canceled", "error", "timed_out"].includes(conclusion) ||
            ["failure", "failed", "cancelled", "canceled", "error", "timed_out"].includes(status)) {
          return `Failed: ${name}`;
        }
        if (status) return `${status}: ${name}`;
        return name;
      }

      function normalizeLanguage(val) {
        const lang = normalizeName(val);
        if (lang === "rs") return "rust";
        return lang;
      }

      function getRelevantJobs(language) {
        switch (normalizeLanguage(language)) {
          case "go":
            return ["build-go"];
          case "rust":
            return ["build-rust"];
          case "python":
            return ["hook-python"];
          case "ts":
            return ["hook-ts"];
          case "lua":
            return ["hook-lua"];
          default:
            return [];
        }
      }

      function isRelevantCurrentJob(language, currentJob) {
        const relevant = getRelevantJobs(language);
        if (!relevant.length) return true;
        const job = normalizeName(currentJob);
        if (!job) return true;
        return relevant.some(r => job.includes(r));
      }

      function updateBuildButtons(progress) {
        const runs = getRuns(progress);
        document.querySelectorAll("[data-endpoint-id]").forEach(card => {
          const endpointId = card.getAttribute("data-endpoint-id");
          const fnName = card.getAttribute("data-endpoint-function");
          const language = card.getAttribute("data-endpoint-language") || "";
          const isAsync = card.getAttribute("data-endpoint-async") === "true";
          const buildLink = document.getElementById(`build-status-${endpointId}`);
          const stepLabel = document.getElementById(`build-step-${endpointId}`);
          const testBtn = document.getElementById(`test-btn-${endpointId}`);
          const wsTestBtn = document.getElementById(`ws-test-btn-${endpointId}`);
          if (!buildLink) return;

          const display = pickRunForFunctionAndLanguage(runs, fnName, language);
          const baseRunning = display ? isInProgress(display) : false;
          const url = (display && (display.HTMLURL || display.htmlurl)) || "";
          const jobName = display?.CurrentJob || display?.current_job || "";
          const stepName = display?.CurrentStep || display?.current_step || "";
          const relevantRunning = baseRunning && isRelevantCurrentJob(language, jobName);
          const effectiveStatus = (baseRunning && !relevantRunning) ? "success" : (display?.status || display?.Status);
          const effectiveConclusion = (baseRunning && !relevantRunning) ? "success" : (display?.conclusion || display?.Conclusion);
          const cls = statusClass(
            effectiveStatus,
            effectiveConclusion,
            relevantRunning
          );
          const label = display
            ? (baseRunning && !relevantRunning
                ? `Success: ${jobName || (display?.Name || display?.name || "Build")}`
                : statusLabel(display, relevantRunning))
            : "No Actions";
          const stepText = stepName ? (jobName ? `${jobName} • ${stepName}` : stepName) : jobName;

          if (url) {
            buildLink.setAttribute("href", url);
            buildLink.classList.remove("pointer-events-none", "opacity-70");
          } else {
            buildLink.setAttribute("href", "#");
            buildLink.classList.add("pointer-events-none", "opacity-70");
          }
          buildLink.className = `px-3 py-1.5 rounded-lg border text-xs font-semibold tracking-wide transition ${cls}`;
          buildLink.textContent = label;
          buildLink.classList.remove("hidden");
          if (stepLabel) {
            if (stepText) {
              stepLabel.textContent = `Step: ${stepText}`;
              stepLabel.classList.remove("hidden");
            } else {
              stepLabel.textContent = "";
              stepLabel.classList.add("hidden");
            }
          }

          if (isAsync) {
            if (wsTestBtn) wsTestBtn.classList.remove("hidden");
            if (testBtn) testBtn.classList.add("hidden");
          } else {
            if (wsTestBtn) wsTestBtn.classList.add("hidden");
            if (testBtn) {
              const showTest = !relevantRunning;
              if (showTest) testBtn.classList.remove("hidden");
              else testBtn.classList.add("hidden");
            }
          }
        });
      }

      function startActionsSSE() {
        if (!window.EventSource) return;
        const es = new EventSource("/api/actions/status/");
        es.addEventListener("status", (ev) => {
          try {
            const data = JSON.parse(ev.data || "{}");
            updateBuildButtons(data);
          } catch (e) {
            // ignore malformed payloads
          }
        });
        es.addEventListener("error", () => {
          // keep UI usable if stream drops
          updateBuildButtons(null);
        });
      }

      document.addEventListener("DOMContentLoaded", startActionsSSE);
    })();
  </script>
  <script>
    // Provide a global method selector for DOMContentLoaded initialization.
    // templ component scripts are scoped, so we expose a stable name here.
    window.selectMethodForEndpoint = function (id, method) {
      const methodStyles = {
        GET: ["border-blue-500", "bg-blue-500/20", "text-blue-400"],
        POST: ["border-green-500", "bg-green-500/20", "text-green-400"],
        PUT: ["border-yellow-500", "bg-yellow-500/20", "text-yellow-400"],
        PATCH: ["border-purple-500", "bg-purple-500/20", "text-purple-400"],
        DELETE: ["border-red-500", "bg-red-500/20", "text-red-400"]
      };
      const allMethodClasses = [
        "border-blue-500","bg-blue-500/20","text-blue-400",
        "border-green-500","bg-green-500/20","text-green-400",
        "border-yellow-500","bg-yellow-500/20","text-yellow-400",
        "border-purple-500","bg-purple-500/20","text-purple-400",
        "border-red-500","bg-red-500/20","text-red-400"
      ];
      const neutralClasses = ["border-neutral-700", "text-neutral-400"];
      ["GET", "POST", "PUT", "PATCH", "DELETE"].forEach(m => {
        const btn = document.getElementById("method-" + m + "-" + id);
        if (btn) {
          btn.classList.remove(...allMethodClasses);
          btn.classList.remove(...neutralClasses);
          btn.classList.add(...neutralClasses);
        }
      });
      const selected = document.getElementById("method-" + method + "-" + id);
      if (selected) {
        selected.classList.remove(...neutralClasses);
        const style = methodStyles[method] || methodStyles.GET;
        selected.classList.add(...style);
      }
      const input = document.getElementById("selected-method-" + id);
      if (input) input.value = method;
    };
  </script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll('input[id^="selected-method-"]').forEach(el => {
        const id = el.id.replace("selected-method-", "");
        const method = el.value || "GET";
        selectMethodForEndpoint(id, method);
      });
    });
  </script>

        if (path.startsWith("/lambda/")) {
          return "/lambda/ws/" + path.replace("/lambda/", "");
        }
        if (path.startsWith("/")) return "/lambda/ws" + path;
        return "/lambda/ws/" + path;
      }

      function setWsUrl() {
        const select = document.getElementById("ws-endpoint-select");
